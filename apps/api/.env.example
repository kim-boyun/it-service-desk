# Database
DATABASE_URL=

# JWT
JWT_SECRET=change-me
JWT_EXPIRES_MIN=120

# CORS
CORS_ORIGINS=

# Storage (local or object)
STORAGE_BACKEND=local
LOCAL_UPLOAD_ROOT=/data/uploads
OBJECT_STORAGE_ENDPOINT=https://kr.object.gov-ntruss.com
OBJECT_STORAGE_BUCKET=it-service-desk
OBJECT_STORAGE_PUBLIC_BASE_URL=

# Safety: disable auto schema changes in production
AUTO_DB_BOOTSTRAP=false

# User sync from MIS DB
SYNC_ENABLED=false
SYNC_SOURCE_DATABASE_URL=
SYNC_SOURCE_SCHEMA=kdis
SYNC_EMP_NO_PREFIX=3
# Password sync: interval in seconds (default 3600 = 1h)
SYNC_PASSWORD_INTERVAL_SECONDS=3600
# Profile sync (name/title/dept/email): once per day at this hour KST (default 0 = midnight)
SYNC_FULL_AT_HOUR_KST=0
SYNC_FULL_AT_MINUTE_KST=0
SYNC_FORCE_FULL=false

# SMTP
SMTP_HOST=
SMTP_PORT=25
SMTP_FROM=
APP_BASE_URL=http://localhost:3000
